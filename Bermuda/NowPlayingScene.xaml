    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="275"/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="trackPlayProgressBar" Width="Auto" Height="Auto" Value="{x:Bind PlayerViewModel.PlaybackSession.Position, Mode=OneWay}" Foreground="#FF00FF0C" Maximum="{x:Bind PlayerViewModel.PlayList.currentMediaDuration, Mode=OneWay}"/>
        <GridView ItemsSource="{x:Bind MediaList}" IsItemClickEnabled="true" Margin="3,10,0,0" Name="currentPlaylistGridView" IsTabStop="False" Width="Auto" Height="Auto" Grid.Column="1" Grid.Row="1" ItemClick="currentPlaylistGridView_ItemClick">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Track">
                    <Grid BorderBrush="Green" BorderThickness=".2" Margin="0,1,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="175"/>
                        </Grid.ColumnDefinitions>
                        <Image Width="Auto" Height="Auto" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Grid.Column="0" Grid.Row="0" Source="Assets/no_image.png"/>
                        <StackPanel Margin="0,0,10,0" Grid.Column="1" Grid.Row="0">
                            <TextBlock Text="{x:Bind Title}" Height="25" FontSize="18" Margin="0,0,15,0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            <TextBlock Text="{x:Bind Album}" Height="20" FontSize="15" Margin="0,0,15,0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" />
                            <TextBlock Text="{x:Bind Artist}" Height="20" FontSize="15" Margin="0,0,15,0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <Grid Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Image x:Name="albumArtImage"  Height="Auto" Width="Auto" Margin="0,10,0,0" Grid.Column="0" Grid.Row="0" Stretch="Fill" Source="{x:Bind PlayerViewModel.PlayList.currentMediaImg, Mode=OneWay}"/>
            <StackPanel x:Name="stackPanel1" Orientation="Horizontal" HorizontalAlignment="Center" Height="50" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="Auto" Grid.Row="2" Visibility="Visible">
                <Button x:Name="previousButton" Style="{StaticResource customPrevButton}" Width="50" Margin="0,0,5,0" HorizontalAlignment="Left" Height="50" Foreground="White" Click="{x:Bind PlayerViewModel.skipPrevious}" Visibility="Visible"/>
                <Button x:Name="playButton" Style="{StaticResource customPlayButton}" Width="50" HorizontalAlignment="Center" Height="50" Foreground="White" Click="{x:Bind PlayerViewModel.togglePlayPause}" Visibility="Visible"/>
                <Button x:Name="nextButton" Style="{StaticResource customNextButton}" Width="50" Margin="5,0,0,0" HorizontalAlignment="Right" Height="50" Foreground="White" Click="{x:Bind PlayerViewModel.skipNext}" Visibility="Visible"/>
            </StackPanel>
            <Button x:Name="shuffleButton" Style="{StaticResource customShuffleButton}" Width="50" Margin="0,0,5,0" HorizontalAlignment="Left" Height="50" Foreground="White" Click="{x:Bind PlayerViewModel.skipPrevious}" Grid.Row="2" Visibility="Visible"/>
            <Slider Visibility="Visible" Style="{StaticResource customSlider}" Foreground="#FF00FF0C" Value="{x:Bind PlayerViewModel.player.Volume}" Name="volumeSlider" Width="150" Height="50" Grid.Row="2" Margin="0,5,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" ValueChanged="{x:Bind PlayerViewModel.skipPrevious}" SmallChange="5" Maximum="100"/>
        </Grid>
    </Grid>
</Page>
